{
    
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "jsx": "preserve",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitThis": false,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "/*": ["/*"]
        },
        "lib": [
            "dom",
            "dom.iterable",
            "es6",
            "esnext"
        ]
    },
    "exclude": [
        "storybook-static/*",
        "dist/*",
        "node_modules"
    ],
    "typeAcquisition": {"enable": true,
    "include": [
        "d3",
        "lodash"
    ]}
}